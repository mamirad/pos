<%= form_for @item, html:{'data-parsley-validate':'true', remote:true } do |f| %>
  <%= render :partial => 'template/form_errors', :object => @item %>

<div class="panel panel-default">
  <div class="panel-body">

   
    <div class="row">
      <div class="col-sm-3">
        <div class="form-group">
          <label>Category  <%= link_to '+', new_item_category_path,remote:true,class: 'btn btn-xs btn-success'%></label>
          <%= f.collection_select :item_category_id, ItemCategory.all, :id, :name, {prompt: "category"}, {class: "form-control my_select2",'data-parsley-required' => true, 'data-parsley-required-message' => "Category is required"}  %>
        </div>
      </div>
      <div class="col-md-3">
        <label>Brand</label>
          <%= f.text_field :brand, :class => "form-control", :placeholder => "Item Brand",'data-parsley-required' => true, 'data-parsley-required-message' => "Brand Name is required" %>
      </div>
      <div class="col-sm-3">
        <div class="form-group">
          <label>Lot</label>
          <%= f.text_field :lot, :class => "form-control", :placeholder => "Lot " %>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="form-group">
          <label>supplier  <%= link_to '+', new_supplier_path,remote:true,class: 'btn btn-xs btn-success'%></label>
          <%= f.select :supplier_id,options_for_select(Supplier.all.map{|supplier|[supplier.name,supplier.id]},@item.supplier_id), {prompt: ' supplier ...' }, { class: 'form-control my_select2' }%>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>SKU</label>
          <%= f.text_field :sku, :class => "form-control", :placeholder => "Item Sku" %>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="form-group">
          <label>Name of Item</label>
          <%= f.text_field :name, :class => "form-control", :placeholder => "Item Name",'data-parsley-required' => true, 'data-parsley-required-message' => "Item Name is required" %>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="form-group">
         published <%= f.check_box :published, :class => "form-control", :placeholder => "" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>purchase Price</label>
          <%= f.number_field :price, :class => "form-control", :placeholder => "Item Price",'data-parsley-required' => true, 'data-parsley-required-message' => "purchase is required" %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label>Stock Quanity</label>
          <div class="row">
            <div class="col-md-6">
              <%= f.number_field :stock_amount, :class => "form-control", :placeholder => "Amount in Stock",'data-parsley-required' => true, 'data-parsley-required-message' => "Stock quantity is required"%>
              
            </div>
            <div class="col-md-6">
              <%=f.select :item_unit, options_for_select(Item.item_units.keys,@item.item_unit),{prompt: ' Unit'},{class: "form-control",'data-parsley-required' => true, 'data-parsley-required-message' => "Unit is required"}%>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>Manufacture At</label>
          <%= f.date_field :manufacture_at, :class => "form-control", :placeholder => "" %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label>Expired At</label>
          <%= f.date_field :expire_at, :class => "form-control", :placeholder => "",'data-parsley-required' => true, 'data-parsley-required-message' => "Expiry date is required" %>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>Min Item</label>
          <%= f.number_field :min_items, :class => "form-control", :placeholder => "Alert at minimum item" %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label>upload Document</label>
          <%= f.file_field :document, :class => "form-control", :placeholder => "" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>Sold Price</label>
          <%= f.number_field :cost_price, :class => "form-control", :placeholder => "Sold price of Item" ,'data-parsley-required' => true, 'data-parsley-required-message' => "Sold Price is required"%>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label>Description</label>
          <%= f.text_area :description, :class => "form-control", :placeholder => "Item Description" %>
        </div>
      </div>
    </div>

    


  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= f.submit 'Submit', :class => "btn btn-success" %>
  </div>
</div>
<% end %>
